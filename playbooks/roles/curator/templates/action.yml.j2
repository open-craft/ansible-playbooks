---
actions:
  1:
    action: delete_indices
    description: "Delete indices older than {{ curator_delete_indices_days }} days."
    options:
      ignore_empty_list: True
    filters:
      - filtertype: kibana
        exclude: true
      - filtertype: age
        source: creation_date
        direction: older
        unit: days
        unit_count: {{ curator_delete_indices_days }}
